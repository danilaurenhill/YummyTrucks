<% if flash[:notice] && flash[:link] %>
  <p>
    <a href=<%= flash[:link] %>>
      <%= flash[:notice] %>
    </a>
  </p>
<% end %>

<center><h1>Here's your random ass yummy ass truck!</h1></center>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <% if flash[:notice] %>
      <div class="notice"><%= flash[:notice] %></div>
    <% end %>
  </div>
</div>

<div class="row">
  <p><h3><b><%= @food_truck.name %></b></h3></p>
  <p><%= image_tag @food_truck.image_url %></p>
  <p><%= @food_truck.description %></p>
  <p><b>Twitter Handle:</b> <%= @food_truck.handle %></p>
  <p><b>Website:</b> <%= @food_truck.website %>
</div>

<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <p>FoodTruck: <a href="https://twitter.com<%= @tweet.user.url.path %>"><%= @tweet.user.name %></a></p>
    <p>Truck Description: <%= @tweet.user.description %></p>
  </div>
</div>

<div class="row">
  <div class="tweet" align="center">
      <blockquote class="twitter-tweet" lang="en">
          <p><%= @tweet.text %></p>
          <a href="https://twitter.com<%= @tweet.url.path %>">Link</a>
      </blockquote>
      <script async src="//platform.twitter.com/widgets.js" charset="utf-8"></script>
  </div>
</div>

<% if current_user %>
    <%= form_tag("/users/#{current_user.id}/tweet") do %>
      <%= hidden_field_tag "food_truck[id]", @food_truck.id %>
      <%= label_tag("user[tweet_content]", "Tweet at @#{@food_truck.handle}") %>
      <%= text_field_tag "user[tweet_content]" %>
      <%= submit_tag "Send Tweet" %>
    <% end %>
<% else %>
    <p>You must log in to send a tweet.</p>
<% end %>

<p><%= link_to "See All Food Trucks", food_trucks_path %></p>






